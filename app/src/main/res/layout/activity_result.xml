<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/text_score"
        android:text="SCORE: M"
        android:textSize="40sp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_score"
        android:gravity="center"
        android:id="@+id/text_high_score"
        android:text="HIGH SCORE: M"
        android:textSize="40sp"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_score"
        android:gravity="center"
        android:id="@+id/text_result_difficulty"
        android:text="難易度: EASY"
        android:textSize="40sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="MainMenu"
        android:id="@+id/button_result_to_start"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:background="@drawable/gray_button"
        app:backgroundTint="@null"
        android:layout_margin="10dp"/>

</RelativeLayout>